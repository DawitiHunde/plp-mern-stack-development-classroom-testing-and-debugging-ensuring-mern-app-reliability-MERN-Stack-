{
  "name": "mern-bug-tracker",
  "version": "1.0.0",
  "description": "Bug Tracker application with comprehensive testing and debugging",
  "scripts": {
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "test": "jest --coverage",
    "test:server": "jest --selectProject=server",
    "test:client": "jest --selectProject=client",
    "test:watch": "jest --watch"
  },
  "keywords": ["mern", "testing", "debugging", "bug-tracker"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0"
  }
}
